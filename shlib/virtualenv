export WORKON_HOME=~/projects
export LIB_HOME=~/lib
export IDEA_HOME=~/ideas

act () {
    for home in $WORKON_HOME $IDEA_HOME $LIB_HOME;
    do
        if [ -d $home/$1 ]
        then

            activate-virtualenv $home/$1

            if [ $? ]
            then
                break
            fi
        fi
    done
}

activate-virtualenv () {
    if-exists deactivate
    workon="$1"
    found=0
    for subpath in $workon/hg $workon/wc $workon;
    do
        if [ -d $subpath ]
        then
           cd $subpath
           break
        fi
    done
    if [ ! found ]
    then
        return 1
    fi

    . $workon/bin/activate

    if [ -d $workon/hg/eggs/bin ]
    then
        export PATH=$PATH:$VIRTUAL_ENV/hg/eggs/bin/
    fi
}

mkact () {
    virtualenv $1 || return 1
    cd $1
    if [ $2 ]
    then
        hg clone $2 hg
    else
        hg init hg
    fi
    activate-virtualenv `pwd`
}
